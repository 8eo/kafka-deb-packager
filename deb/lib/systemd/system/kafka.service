[Unit]
Description=Apache Kafka server (broker)
Documentation=http://kafka.apache.org/documentation.html
Requires=zookeeper.service network-online.target remote-fs.target
After=zookeeper.service network-online.target remote-fs.target
ConditionPathExists=/usr/share/kafka/config/server.properties

[Service]
Type=simple
PIDFile=/var/run/kafka.pid
User=daemon
Group=daemon
ExecStart=/usr/share/kafka/bin/kafka-server-start.sh /usr/share/kafka/config/server.properties
ExecStop=/usr/share/kafka/bin/kafka-server-stop.sh
Restart=on-failure
SyslogIdentifier=kafka

[Install]
WantedBy=multi-user.target
